<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    tools:context=".CalculadoraActivity">

    <TextView
        android:textStyle="bold"
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistema de Evalucación"
        android:textSize="16sp"/>



    <Spinner
        android:entries="@array/calificaciones"
        android:layout_marginTop="10dp"
        android:id="@+id/Spinner1"
        android:layout_below="@+id/TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <View
        android:layout_marginTop="10dp"
        android:id="@+id/V1"
        android:background="#6B6666"
        android:layout_below="@+id/Spinner1"
        android:layout_height="2dp"
        android:layout_width="wrap_content">
    </View>

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/TextView2"
        android:layout_below="@+id/V1"
        android:text="Prácticas Teóricas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/V2"
        android:layout_centerInParent="true"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        ></View>

    <TextView
        android:textStyle="bold"
        android:id="@+id/TextView3"
        android:layout_marginTop="20dp"
        android:layout_below="@id/V1"
        android:layout_alignEnd="@id/V1"
        android:layout_width="wrap_content"
        android:text="Prom:"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/TvPromedioTeoria"
        android:layout_marginTop="20dp"
        android:layout_below="@id/V1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/TextView4"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/TextView3"
        android:layout_width="wrap_content"
        android:text="Práctica 1"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/EtTeoria1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TvPromedioTeoria"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:hint="      "
        android:textAlignment="center" />
    <TextView
        android:id="@+id/TextView5"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/TextView4"
        android:layout_width="wrap_content"
        android:text="Práctica 2"
        android:layout_height="wrap_content" />

    <EditText
        android:textAlignment="center"
        android:id="@+id/EtTeoria2"
        android:hint="      "
        android:layout_marginTop="5dp"
        android:layout_below="@id/EtTeoria1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_marginTop="30dp"
        android:id="@+id/V3"
        android:background="#6B6666"
        android:layout_below="@+id/TextView5"
        android:layout_height="2dp"
        android:layout_width="wrap_content"></View>

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/TextView6"
        android:layout_below="@+id/V3"
        android:text="Prácticas Laboratorios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/TextView7"
        android:layout_marginTop="20dp"
        android:layout_below="@id/V3"
        android:layout_alignEnd="@id/V1"
        android:layout_width="wrap_content"
        android:text="Prom:"
        android:layout_height="wrap_content"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/TvPromedioLaboratorio"
        android:layout_marginTop="20dp"
        android:layout_below="@id/V3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/TextView8"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/TextView7"
        android:layout_width="wrap_content"
        android:text="Práctica 1"
        android:layout_height="wrap_content" />

    <EditText
        android:textAlignment="center"
        android:id="@+id/EtLaboratorio1"
        android:hint="      "
        android:layout_marginTop="5dp"
        android:layout_below="@id/TvPromedioLaboratorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/TextView9"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/TextView8"
        android:layout_width="wrap_content"
        android:text="Práctica 2"
        android:layout_height="wrap_content" />

    <EditText
        android:textAlignment="center"
        android:id="@+id/EtLaboratorio2"
        android:hint="      "
        android:layout_below="@id/EtLaboratorio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:id="@+id/TextView10"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/TextView9"
        android:layout_width="wrap_content"
        android:text="Práctica 3"
        android:layout_height="wrap_content" />

    <EditText
        android:textAlignment="center"
        android:id="@+id/EtLaboratorio3"
        android:hint="      "
        android:layout_below="@id/EtLaboratorio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/TextView12"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/TextView10"
        android:layout_width="wrap_content"
        android:text="Práctica 4"
        android:layout_height="wrap_content" />

    <EditText
        android:textAlignment="center"
        android:id="@+id/EtLaboratorio4"
        android:hint="      "
        android:layout_below="@id/EtLaboratorio3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>
    
    <TextView
        android:id="@+id/TextView13"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/TextView12"
        android:layout_centerHorizontal="true"
        android:text="Promedio:"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/TextView13"
        android:id="@+id/Final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>

    <Button
        android:background="#F3CF64"
        android:text="Calcular"
        android:id="@+id/ButtonCalcular"
        android:layout_below="@+id/Final"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>